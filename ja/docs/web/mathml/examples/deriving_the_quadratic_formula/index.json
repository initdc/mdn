          </mrow>\n            <mo>+ </mo>\n            <mfrac>\n              <mrow>\n                <mi>b</mi>\n              </mrow>\n              <mi>a</mi>\n            </mfrac>\n            <mo>⁤</mo>\n            <mi>x</mi>\n          </mrow>\n          <mspace depth=\"1ex\" height=\"0.5ex\" width=\"2.5ex\"></mspace>\n          <mo>=</mo>\n          <mfrac>\n            <mrow>\n              <mo>-</mo>\n              <mi>c</mi>\n            </mrow>\n            <mi>a</mi>\n          </mfrac>\n          <mspace depth=\"1ex\" height=\"0.5ex\" width=\"2ex\"></mspace>\n          <mrow>\n            <mtext mathcolor=\"red\" mathsize=\"10pt\">首位係数で両辺を割る。</mtext>\n          </mrow>\n        </mtd>\n      </mtr>\n      <mtr>\n        <mtd>\n          <mrow>\n            <mrow>\n              <mrow>\n                <mspace depth=\"1ex\" height=\"0.5ex\" width=\"2.5ex\"></mspace>\n                <msup>\n                  <mi>x</mi>\n                  <mn>2</mn>\n                </msup>\n              </mrow>\n              <mo>+ </mo>\n              <mfrac>\n                <mrow>\n                  <mi>b</mi>\n                </mrow>\n                <mi>a</mi>\n              </mfrac>\n              <mo>⁤</mo>\n              <mi>x</mi>\n              <mo>+ </mo>\n              <msup>\n                <mrow>\n                  <mo>(</mo>\n                  <mfrac>\n                    <mrow>\n                      <mi>b</mi>\n                    </mrow>\n                    <mrow>\n                      <mn>2</mn>\n                      <mi>a</mi>\n                    </mrow>\n                  </mfrac>\n                  <mo>)</mo>\n                </mrow>\n                <mn>2</mn>\n              </msup>\n            </mrow>\n            <mo>=</mo>\n            <mfrac>\n              <mrow>\n                <mo>-</mo>\n                <mi>c</mi>\n                <mo>(</mo>\n                <mn>4</mn>\n                <mi>a</mi>\n                <mo>)</mo>\n     