mrow>\n              <mspace depth=\"1ex\" height=\"0.5ex\" width=\"2.5ex\"></mspace>\n              <mrow>\n                <mi>x</mi>\n                <mo>+ </mo>\n                <mfrac>\n                  <mrow>\n                    <mi>b</mi>\n                  </mrow>\n                  <mrow>\n                    <mn>2</mn>\n                    <mi>a</mi>\n                  </mrow>\n                </mfrac>\n              </mrow>\n              <mo>=</mo>\n              <msqrt>\n                <mfrac>\n                  <mrow>\n                    <msup>\n                      <mi>b</mi>\n                      <mn>2</mn>\n                    </msup>\n                    <mo>- </mo>\n                    <mn>4</mn>\n                    <mi>a</mi>\n                    <mi>c</mi>\n                  </mrow>\n                  <mrow>\n                    <mn>4</mn>\n                    <msup>\n                      <mi>a</mi>\n                      <mn>2</mn>\n                    </msup>\n                  </mrow>\n                </mfrac>\n              </msqrt>\n            </mrow>\n            <mspace depth=\"1ex\" height=\"0.5ex\" width=\"2ex\"></mspace>\n            <mrow>\n              <mtext mathcolor=\"red\" mathsize=\"10pt\"></mtext>\n            </mrow>\n          </mrow>\n        </mtd>\n      </mtr>\n      <mtr>\n        <mtd>\n          <mrow>\n            <mrow>\n              <mspace depth=\"1ex\" height=\"0.5ex\" width=\"2.5ex\"></mspace>\n              <mrow>\n                <mi>x</mi>\n              </mrow>\n              <mo>=</mo>\n              <mfrac>\n                <mrow>\n                  <mo>-</mo>\n                  <mi>b</mi>\n                </mrow>\n                <mrow>\n                  <mn>2</mn>\n                  <mi>a</mi>\n                </mrow>\n              </mfrac>\n              <mo>±</mo>\n              <mrow>\n                <mo>{</mo>\n                <mi>C</mi>\n                <mo>}</mo>\n              </mrow>